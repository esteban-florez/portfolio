---
import '../styles.css'
import About from '../components/About.astro'
import Carousel from '../components/Carousel.astro'
import Footer from '../components/Footer.astro'
import Header from '../components/Header.astro'
import Hero from '../components/Hero.astro'
import Projects from '../components/Projects.astro'
import Skills from '../components/Skills.astro'
---

<html class="scroll" lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Esteban Florez - Desarrollador Web</title>
  <meta name="description" content="Portafolio personal de Esteban Florez, Desarrollador Web.">
  <meta name="generator" content={Astro.generator} />
</head>

<body class="bg-slate-900 text-slate-400 selection:bg-teal-400 selection:text-teal-900 overflow-x-hidden">
  <Header />
  <main>
    <Hero />
    <Carousel />
    <About />
    <Projects />
    <Skills />
  </main>
  <Footer />
</body>

</html>
