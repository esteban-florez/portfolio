---
import Cover from './Cover.astro'
import Icon from './Icon.astro'
const { id, title, date, stack, image, url, repo, inverted = false } = Astro.props
---

<div class="bg-slate-900 flex flex-col lg:flex-row items-center my-6 gap-4 p-4 md:p-8 rounded-xl">
  <Cover id={id} image={image} classes={['block', inverted && 'lg:hidden']} />
  <div>
    <h3 class="text-gradient text-2xl font-bold tracking-tighter leading-tight hover:text-gradient">
      {title}
    </h3>
    <p class="text-sm font-bold">{date}</p>
    <div class="flex items-center gap-4 mt-4">
      {url && (
        <a href={url} target="_blank" rel="noopener noreferrer"
        class="flex bg-gradient rounded-lg items-center gap-1 text-slate-800 px-2 py-1 text-sm">
          <Icon id="link" class="h-4" />
          Sitio web
        </a>
      )}
      <a href={`https://github.com/esteban-florez/${repo ?? id}`} target="_blank" rel="noopener noreferrer"
        class="flex bg-gradient rounded-lg items-center gap-1 text-slate-800 px-2 py-1 text-sm">
        <Icon id="github" class="h-4" />
        Repositorio
      </a>
    </div>
    <slot />
    <div class="flex flex-wrap gap-2 mt-4">
      {stack.map((tech: string) => (
        <span class="text-green-400 bg-green-400/15 font-medium rounded-2xl px-2 py-1 text-sm">{tech}</span>
      ))}
    </div>
  </div>
  {<Cover id={id} image={image} classes={['hidden', inverted && 'lg:block']} />
</div>
