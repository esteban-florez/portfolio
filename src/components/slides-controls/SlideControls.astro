---
import { Image } from 'astro:assets'
import type { ImageData } from '../../consts'
import { images } from '../../images-sources'
import SlideButton from './SlideButton.astro'
---

<div class="flex lg:bg-black/90 py-4 justify-center items-center gap-4 fixed lg:absolute w-full bottom-0 opacity-100 transition-opacity duration-1000 px-4">
  <SlideButton icon="left" id="slide-previous" />
  <div class="hidden md:flex justify-center items-center gap-4" id="thumbnails">
    {images.map(({ name, src, project }: ImageData) => (
      <Image width={112} height={63} class="ring-4 ring-transparent hover:ring-slate-400 cursor-pointer w-24 lg:w-28 transition-all aspect-video" src={src} alt="Captura de pantalla" data-thumbnail={`${project}-${name}`} />
    ))}
  </div>
  <SlideButton icon="right" id="slide-next" />
</div>
