---
import { Image } from 'astro:assets'
import { type ImageData } from '../consts'
import { sources as images } from '../scripts/images-sources'
import Dialog from './Dialog.astro'
import SlideControls from './slides-controls/SlideControls.astro'
import SlideClose from './slides-controls/SlideClose.astro'
---

<Dialog class="select-none open:flex flex-col bg-slate-950/80 justify-center" id="slideshow">
  {images.map(({ name, src, project }: ImageData) => (
    <Image class="max-w-full max-h-full aspect-video" src={src} alt="Capturas de pantalla de proyectos" data-slide={`${project}-${name}`} />
  ))}
  <SlideClose />
  <SlideControls />
</Dialog>
<script src="/src/scripts/slideshow.ts"></script>
