---
import Icon from '../Icon.astro'
---
<header class="flex items-center w-full px-8 h-16 justify-between">
  <div class="flex items-center gap-2">
    <a class="contents" href="/">
      <Icon id="code" class="h-8 w-8 text-green-400" />
      <p class="font-bold tracking-tight text-xl text-gradient">
        Esteban Florez</p>
    </a>
  </div>
  <div class="flex items-center gap-6 pl-8 text-slate-300 font-medium">
    <a class="underline-animation block px-1 hover:text-teal-400" href="#sobre-mi">Sobre mí</a>
    <a class="underline-animation block px-1 hover:text-teal-400" href="#proyectos">Proyectos</a>
    <a class="underline-animation block px-1 hover:text-teal-400" href="#contacto">Contacto</a>
  </div>
  <div class="flex items-center gap-2">
    <a href="https://github.com/esteban-florez" target="_blank" rel="noopener noreferrer">
      <Icon id="github" class="h-7 text-slate-200 hover:text-teal-400 transition-colors" />
    </a>
    <a href="https://www.linkedin.com/in/esteban-florez-b210a5283" target="_blank" rel="noopener noreferrer">
      <Icon id="linkedin" class="h-8 text-slate-200 hover:text-teal-400 transition-colors" />
    </a>
    <button
      class="bg-gradient text-slate-800 px-3 py-2 rounded-lg text-sm hover:brightness-90 transition-all flex items-center gap-1">
      <Icon id="download" class="h-5" />
      Currículum
    </button>
  </div>
</header>
